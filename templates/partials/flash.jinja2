{% with messages = get_flashed_messages(with_categories=true) %}
    {% if messages %}
        {% for category, message in messages %}
            {% set color = "primary" %}
            {% if category == "error" %}
                {% set color = "danger" %}
            {% elif category == "success" %}
                {% set color = "success" %}
            {% elif category == "info" %}
                {% set color = "info" %}
            {% elif category == "warning" %}
                {% set color = "warning" %}
            {% endif %}

            <div class="notification is-{{ color }}">{{ message }}</div>
        {% endfor %}
    {% endif %}
{% endwith %}